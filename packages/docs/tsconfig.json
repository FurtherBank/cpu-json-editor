// @cpu-json-editor/docs
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["jest"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@cpu-json-editor/core": ["./node_modules/@cpu-json-editor/core/src"],
      "@cpu-json-editor/core/dist/esm": [
        "./node_modules/@cpu-json-editor/core/src"
      ],
      "@cpu-json-editor/core/dist/esm/*": [
        "./node_modules/@cpu-json-editor/core/src/*",
        "*"
      ],
      "@cpu-json-editor/antd-components": [
        "./node_modules/@cpu-json-editor/antd-components/src"
      ],
      "@cpu-json-editor/antd-components/dist/esm": [
        "./node_modules/@cpu-json-editor/antd-components/src"
      ],
      "@cpu-json-editor/antd-components/dist/esm/*": [
        "./node_modules/@cpu-json-editor/antd-components/src/*",
        "*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/demos/**", "jest.config.ts", "__test__/**"]
}
