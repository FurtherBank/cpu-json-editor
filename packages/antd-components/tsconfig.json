// @cpu-json-editor/antd-components
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["jest"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@cpu-json-editor/core": ["../core/src"],
      "@cpu-json-editor/core/dist/esm": ["../core/src"],
      "@cpu-json-editor/core/dist/esm/*": ["../core/src/*", "*"]
    }
  },
  "references": [
    {
      "path": "../core"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["jest.config.ts", "__test__/**/*"]
}
