// @cpu-json-editor/antd-components
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["jest"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@cpu-json-editor/core/dist/esm": [
        "./node_modules/@cpu-json-editor/core/src"
      ],
      "@cpu-json-editor/core/dist/esm/*": [
        "./node_modules/@cpu-json-editor/core/src/*",
        "*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["demos/**", "jest.config.ts", "__test__/**"]
  // "references": [{ "path": "../cpu-json-editor/tsconfig.json" }]
}
