{
  "name": "json-schemaeditor-antd",
  "version": "0.0.1",
  "description": "A react library developed with dumi",
  "license": "MIT",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:watch": "father dev",
    "dev": "dumi dev",
    "docs:build": "dumi build",
    "doctor": "father doctor",
    "lint": "npm run lint:es && npm run lint:css",
    "lint:css": "stylelint \"{src,test}/**/*.{css,less}\"",
    "lint:es": "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky install && dumi setup",
    "prepublishOnly": "father doctor && npm run build",
    "start": "npm run dev",
    "test": "cross-env TS_NODE_TRANSPILE_ONLY=yes jest --passWithNoTests",
    "codegen": "pnpm exec playwright codegen http://localhost:8000/#/~demos/packages-docs-src-json-schema-editor-demo-app",
    "playwright": "pnpm exec playwright test"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@cpu-json-editor/core": "workspace:^0.1.0",
    "@playwright/test": "^1.32.3",
    "@testing-library/jest-dom": "^5",
    "@testing-library/react": "^13",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29",
    "@types/json-schema": "^7.0.11",
    "@types/node": "^18.15.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@umijs/lint": "^4.0.0",
    "cross-env": "^7",
    "dumi": "^2.0.2",
    "eslint": "^8.23.0",
    "father": "^4.1.0",
    "husky": "^8.0.1",
    "jest": "^29",
    "jest-environment-jsdom": "^29",
    "lint-staged": "^13.0.3",
    "monaco-editor": "^0.37.1",
    "monaco-editor-webpack-plugin": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-monaco-editor": "^0.52.0",
    "stylelint": "^14.9.1",
    "ts-node": "^10",
    "typescript": "^4",
    "umi": "^4.0.66"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "authors": [
    "1293874885@qq.com"
  ]
}
